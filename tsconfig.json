{
    "compilerOptions": {
        "target": "ES2020",
        "moduleResolution": "node",
        "declaration": true, // Generates .d.ts files for types
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist" // We'll override this for builds
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}